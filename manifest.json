{
    "manifest_version": 3,
    "name": "Top Scroll Toggle",
    "version": "1.0",
    "description": "Скроллит страницу вверх и возвращает обратно при повторном нажатии.",

    "permissions": [
        "activeTab",
        "scripting"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "action": {
        "default_icon": {
            "48": "icons/icon48.png",
            "96": "icons/icon96.png"
        },
        "default_title": "Вверх / Обратно"
    },

    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "top-scroll-toggle@nixsi.addon",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": ["none"],
                "optional": []
            }
        }
    }
}